<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.doscervezas.avocado">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".vo.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".ui.EditEntryActivity"
            android:label="@string/title_activity_edit_entry"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.SelectBudgetActivity"
            android:label="@string/title_activity_select_budget"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.AddBudgetActivity"
            android:label="@string/title_activity_add_budget"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.EditBudgetActivity"
            android:label="@string/title_activity_edit_budget"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>